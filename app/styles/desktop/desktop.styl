grey  = #B0B2AF
red   = #CA4441
green = #CFF09E

html
  height: 100%

body
  font-family: 'Belgrano', serif
  cursor: default
  background: #222
  height: 100%
  position: relative

#banner
  width: 100%
  height: 80%
  overflow: hidden
  position: fixed
  top: 0
  left: 0
  border-bottom: 18px solid rgba(0, 0, 0, 0.2)
  z-index: 0400

  img
    position: absolute
    top: -100px
    left: 0

  .shadow
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 100%
    box-shadow: inset 0 -10px 50px black

#top-wrapper
  position: relative
  text-align: center
  z-index: 0403

  #qr-wrapper
    margin-top: 30px

    #qr-code
      width: 300px
      height: 300px
      background: grey
      margin: 0 auto
      border: 10px solid grey
      border-top-right-radius: 3px
      border-top-left-radius: 3px

    #visual-key-wrapper
      background: grey
      border: 10px solid grey
      border-bottom-right-radius: 3px
      border-bottom-left-radius: 3px
      margin: 0 auto
      width: 300px
      position: relative

      h4
        font-size: 1em
        font-weight: normal
        padding: 0
        margin: 0

      #visual-key
        font-size: 4em
        padding: 2px 0 10px 0
        text-shadow: 2px 2px 0 rgba(255, 255, 255, 0.2)

      #visual-key-recreate
        position: absolute
        right: 3px
        bottom: 0
        font-size: 1.2em
        color: #555

        &:hover
          color: #111

  #demo-wrapper
    width: 1024px
    margin: 0 auto
    display: none

    #slider-wrapper
      float: left
      width: 724px
      text-align: left
      padding-top: 73px

      #slider
        img
          border: 10px solid rgba(255, 255, 255, 0.2)
          border-radius: 3px
          box-shadow: 0 0 10px rgba(0, 0, 0, 1)

    #phone-wrapper
      float: left
      width: 300px
      height: 566px
      text-align: left
      background: url('../../images/phone.png') top left no-repeat
      position: relative
      margin-top: 10px

      .inner
        margin: 0 auto
        width: 263px
        height: 440px
        background: #222
        box-shadow: inset 0 0 30px black 
        margin-top: 63px
        border-radius: 2px
        position: relative

        .column
          float: left
          width: 33%
          text-align: center

        #controls
          background: grey
          min-height: 70px
          max-height: 70px
          position: absolute
          bottom: 0
          left: 0
          width: 100%
          box-shadow: 0 0 40px rgba(0, 0, 0, 0.6W)
          z-index: 3

          a
            margin: 0 auto
            display: block
            width: 33px
            height: 33px
            background: rgba(0, 0, 0, 0.3)
            border-radius: 500px
            color: #222
            font-size: 1em
            position: relative
            margin-top: 19px
            border-bottom: 1px solid rgba(0, 0, 0, 0.6)

            i
              position: absolute
              top: 10px
              text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.2)

          .left a i
            left: 8px

          .mid a i
            left: 12px

          .right a i
            left: 11px

          a.playing i
            left: 10px

        header
          min-height: 40px
          max-height: 40px
          position: relative
          background: grey
          box-shadow: 0 0 40px rgba(0, 0, 0, 0.2)
          z-index: 3

          h1
            font-size: 1.3em
            font-weight: normal
            margin: 0
            padding: 6px 0 0 10px
            text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.5)
            color: #444

            span
              background: green
              padding: 1px 3px
              border-radius: 2px
              text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.2)
              color: #222

        #current-image
          position: absolute
          top: 30px
          width: 100%
          height: 340px
          overflow: hidden

          img
            position: absolute
            left: -68%

#navigation-wrapper
  position: fixed
  top: 80%
  left: 0
  width: 100%
  text-align: right
  z-index: 0401

  #logo
    font-size: 3em
    font-weight: normal
    margin: 0
    padding: 0
    margin-top: 4px
    text-align: left
    position: absolute
    top: 20px
    left: 20px

    a
      color: grey
      text-decoration: none

      .pairs
        color: red

      .io
        color: grey

      .slogan
        display: block
        font-size: 0.3em

  #navigation
    margin-top: 45px
    margin-right: 30px

    a
      color: #eee
      font-size: 1.2em
      text-decoration: none
      border-bottom: 1px solid #111
      padding: 4px 10px
      margin: 0 5px

      i
        color: #111

      &:hover
        color: white
        border-bottom: 1px solid red

        i
          color: red

      &.current
        border-bottom: 1px solid red
        cursor: default

  &.small
    #navigation a i
      color: red

#content
  position: absolute
  top: 100%
  left: 0
  width: 100%
  height: 100%
  cursor: default
  text-align: center
  z-index: 0399

  .section
    margin: 0 auto
    width: 90%
    text-align: left
    padding-top: 130px
    min-height: 90%

    h2
      font-weight: normal
      font-size: 3em
      color: grey
      text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.8)
      margin-bottom: 20px

    h4
      font-weight: normal
      color: #ddd
      font-size: 1.1em

      span
        color: red

.row
  .threecolumn
    float: left
    width: 33%

    p
      width: 90%
      color: #ddd


#how-it-works
  a
    color: red
    text-decoration: none

    &:hover
      text-decoration: underline
      
  .stepimg
    position: relative

    .fa
      position: absolute
      top: 0
      left: 280px
      font-size: 3em
      background: #222
      padding: 5px 10px
      color: rgba(0, 0, 0, 0.5)
      border-left: 3px solid rgba(0, 0, 0, 0.3)
      border-radius: 2px

    img
      border: 8px solid rgba(0, 0, 0, 0.2)

  .threecolumn:hover
    h4, p
      color: white
      text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.4)

    .stepimg .fa
      color: red

#subscribe
  position: relative

  #social
    float: right
    position: relative
    top: -86px

    a
      text-decoration: none
      color: rgba(0, 0, 0, 0.6)
      font-size: 7em
      padding: 30px

      &:hover
        color: green

#subscribe-form
  width: 600px
  height: 50px
  position: relative
  margin-top: 50px

  input[type="submit"]
    display: block
    position: absolute
    top: 3px
    right: 0
    font-size: 1.2em
    background: red
    text-shadow: 2px 2px 0 rgba(255, 255, 255, 0.1)
    cursor: pointer
    width: 200px
    height: 50px
    border: none
    color: #222
    border-radius: 2px

    &:hover
      box-shadow: 0 0 3px rgba(0, 0, 0, 0.5)
      color: #111

  input[type="text"]
    height: 50px
    width: 580px
    border: none
    background: rgba(202, 68, 65, 0.6)
    font-size: 1.2em
    color: white
    padding: 3px 3px 3px 20px
    border-radius: 2px

#about
  p
    font-size: 1.4em
    color: grey
    margin-bottom: 50px
    line-height: 1.8em

    a
      text-decoration: none
      color: grey

      &:hover
        color: red

    &.ego
      font-size: 1.6em

      a
        color: white
        border-bottom: 1px solid red

        &:hover
          color: green
          border-bottom: 1px solid green

  #stats
    color: grey

    span
      color: white

.paired
  #qr-wrapper
    display: none

  #demo-wrapper
    display: block !important

  #logo .pairs
    color: green !important

  #navigation
    a:hover
      border-bottom: 1px solid green !important

    a.try-it-out i
      color: green !important
    a.current
      border-bottom: 1px solid green !important

      i
        color: green !important