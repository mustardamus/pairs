  top: 0
  left: 0
  border-bottom: 18px solid rgba(0, 0, 0, 0.2)
  z-index: 0400

  img
    position: absolute
    top: -100px
    left: 0

  .shadow
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 100%
    box-shadow: inset 0 -10px 50px black

#qr-wrapper
  position: relative
  text-align: center
  margin-top: 30px
  z-index: 0403
  
  #qr-code
    width: 300px
    height: 300px
    background: grey
    margin: 0 auto
    border: 10px solid grey
    border-top-right-radius: 3px
    border-top-left-radius: 3px

  #visual-key-wrapper
    background: grey
    border: 10px solid grey
    border-bottom-right-radius: 3px
    border-bottom-left-radius: 3px
    margin: 0 auto
    width: 300px
    position: relative

    h4
      font-size: 1em
      font-weight: normal
      padding: 0
      margin: 0

    #visual-key
      font-size: 4em
      padding: 2px 0 10px 0
      text-shadow: 2px 2px 0 rgba(255, 255, 255, 0.2)

    #visual-key-recreate
      position: absolute
      right: 3px
      bottom: 0
      font-size: 1.2em
      color: #555

      &:hover
        color: #111

#navigation-wrapper
  position: fixed
  top: 80%
  left: 0
  width: 100%
  text-align: right
  z-index: 0401

  #logo
    font-size: 3em
    font-weight: normal
    margin: 0
    padding: 0
    margin-top: 4px
    text-align: left
    position: absolute
    top: 20px
    left: 20px

    a
      color: grey
      text-decoration: none

      .pairs
        color: red

      .io
        color: grey

      .slogan
        display: block
        font-size: 0.3em

  #navigation
    margin-top: 45px
    margin-right: 30px

    a
      color: #eee
      font-size: 1.2em
      text-decoration: none
      border-bottom: 1px solid #111
      padding: 4px 10px
      margin: 0 5px

      i
        color: #111

      &:hover
        color: white
        border-bottom: 1px solid red

        i
          color: red

      &.current
        border-bottom: 1px solid red

  &.small
    #navigation a i
      color: red

#content
