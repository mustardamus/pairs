@import url(http://fonts.googleapis.com/css?family=Belgrano)

body
  font-family: 'Belgrano', serif
  cursor: default
  overflow: hidden

#wrapper
  .column
    float: left
    width: 50%

.logo
  color: white
  font-size: 3.8em
  font-weight: normal
  color: #CA4441
  text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.7)
  padding-left: 60px

  .io
    color: #B0B2AF

  .slogan
    color: #B0B2AF
    display: block
    font-size: 0.4em

#bullets
  list-style: none
  margin: 0
  padding: 0 50px
  margin-top: 300px

  li
    position: relative
    background: rgba(0, 0, 0, 0.6)
    min-height: 54px
    border-radius: 3px
    margin-top: 10px

    i
      position: absolute
      top: 5px
      left: 15px
      font-size: 2.8em
      color: #3FC9BA

    p
      padding: 10px 0 10px 70px
      color: #eee
      font-size: 1.3em

#right-wrapper
  text-align: center
  position: relative

#verification-wrapper
  margin-top: 110px

  a
    color: #CA4441
    text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.1)
    text-decoration: none

    &:hover
      text-decoration: underline

  #qr-code
    margin: 0 auto
    background: #B0B2AF
    padding: 10px
    width: 310px
    box-shadow: 0 0 90px rgba(0, 0, 0, 0.9)
    border-top-right-radius: 3px
    border-top-left-radius: 3px

    img
      border: 5px solid white
    
  #visual-code
    background: rgba(176, 178, 175, 0.8)
    width: 330px
    margin: 0 auto
    border-top: 1px solid rgba(0, 0, 0, 0.3)
    padding-top: 10px
    padding-bottom: 8px
    text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.3)
    border-bottom-right-radius: 3px
    border-bottom-left-radius: 3px
      
    span
      display: block
      font-size: 3em
      color: black
      text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2)

  h2
    color: #B0B2AF
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.7)
    font-size: 2.8em
    font-weight: normal
    color: #CA4441
    text-align: center
    position: relative
    top: -10px

    i
      display: block
      font-size: 2em
      text-shadow: 0 -2px 2px rgba(0, 0, 0, 0.4)

#phone-wrapper
  padding-top: 10px

  #phone-content
    background: url('../images/phone.png') no-repeat top center
    min-height: 570px
    position: relative
    top: -26px
    z-index: 301
    text-align: center
    padding-top: 68px

    #phone-content-inner
      margin: 0 auto
      width: 263px
      height: 440px
      background: #222
      box-shadow: inset 0 0 30px black


  h2
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.7)
    font-size: 2.8em
    font-weight: normal
    position: relative
    z-index: 302

    i
      display: block
      font-size: 2em
      text-shadow: 0 2px 2px rgba(0, 0, 0, 0.4)

#isRemote
  background: #222
  text-align: center
  overflow: auto

  .logo
    padding: 0
    margin: 20px 0 40px 0
    position: relative

  .buttons
    margin-bottom: 40px

  .btn
    font-size: 1.5em

  #visual-code
    margin: 0 auto
    width: 90%

    label
      display: block
      font-size: 1.2em
      padding: 6px 0
      background: #B0B2AF
      text-shadow: 2px 2px 0 rgba(255, 255, 255, 0.3)

    input[type="text"]
      width: 100%
      border: none
      background: rgba(202, 68, 65, 0.6)
      font-size: 2em
      color: white
      text-align: center
      padding: 10px 0

    #visual-code-submit
      width: 100%
      background: rgb(202, 68, 65)
      border: none
      font-size: 2.4em
      margin-top: 16px
      margin-bottom: 16px
      cursor: pointer

#logo.paired, .paired
  color: #CFF09E

.buttons
  width: 90%
  margin: 0 auto
  margin-bottom: 70px 

  .btn
    border: 1px solid #111
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)
    background: #111
    font-size: 1.2em
    padding: 20px 0
    border-radius: 3px
    cursor: pointer
    color: white

    .dim-off
      color: #CA4441

    .dim-on
      color: #CFF09E

body.isPaired
  #visual-code
    display: none

  #buttons
    display: block

  #subscribe-demo
    display: block

#subscribe-demo
  display: none

#buttons
  display: none

#phone-content-inner
  h4
    font-size: 1.9em
    margin: 0
    padding: 20px 0 30px 0

.subscribe
  margin: 0 auto
  width: 90%

  label
    display: block
    font-size: 1.2em
    padding: 6px 0
    background: rgb(202, 68, 65)
    text-shadow: 2px 2px 0 rgba(255, 255, 255, 0.1)

  input[type="text"]
    width: 100%
    border: none
    background: rgba(202, 68, 65, 0.6)
    font-size: 1.4em
    color: white
    text-align: center
    padding: 10px 0

  input[type="submit"]
    width: 100%
    background: rgb(202, 68, 65)
    border: none
    font-size: 1em
    margin-top: 16px
    margin-bottom: 16px
    cursor: pointer
    padding: 10px 0

#overlay
  position: fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  background: rgba(0, 0, 0, 0.9)